% Define values of X and their probabilities
X = [0 1 2 3];
P = [0.1 0.3 0.4 0.2];

% Calculate Mean
mean_X = sum(X .* P);

% Calculate E(X^2)
EX2 = sum((X.^2) .* P);

% Calculate Variance
var_X = EX2 - mean_X^2;

% Display results
fprintf('Mean of X = %.2f\n', mean_X);
fprintf('Variance of X = %.2f\n', var_X);
